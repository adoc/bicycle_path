def main():
    from cards.blackjack import Suits,Ranks,Card,Deck,Shoe
    print "Blackjack Card Tests:"

    print "Suits: %s"%[suit for suit in Suits]
    assert len(Suits)==4
    print "Ranks: %s"%[rank for rank in Ranks]
    assert len(Ranks)==13

    c1 = Card("A")
    c2 = Card("a")
    print 'Card("A") == Card("a")'
    assert c1 == c2

    c1 = Card("AC")
    c2 = Card("ac")
    c3 = Card(rank='a',suit='c')
    c4 = Card(rank=1,suit=1)
    print 'Card("AC") == Card("ac") == Card(rank="a",suit="c") == Card(rank=1,suit=1)'
    assert c1 == c2 == c3 == c4

    c1 = Card("AC")
    c2 = Card("as")
    print 'Card("AC") == Card("as")'
    assert c1 == c2

    print 'int(Card("AC"))==1'
    assert int(Card("AC"))==1

    print 'int(Card("KS"))==10'
    assert int(Card("KS"))==10

    print 'int(Card("JC"))==10'
    assert int(Card("JC"))==10

    d = Deck()
    print "Deck: %s"%d
    assert len(d)==52
    print "Card() in Deck()"
    assert Card() in d
    print "Card('a') in Deck()"
    assert Card('a') in d
    print "Card('ac') in Deck()"
    assert Card('ac') in d

    d2 = Deck()
    print "Deck() == Deck()"
    assert d == d2
    d2.shuffle()
    print "Shuffled Deck: %s"%d2
    print "Shuffled Deck() != Deck()"
    assert d != d2

if __name__ == '__main__':
    main()